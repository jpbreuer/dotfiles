set $mode_launcher Launch: [c]hromium [t]hunderbird [s]potify+ [m]essenger
bindsym $mod+o mode "$mode_launcher"
mode "$mode_launcher" {
    bindsym c exec chromium
    bindsym t exec thunderbird
    bindsym s exec spotify & blockify
    bindsym m exec messengerfordesktop & rm ~/.config/i3/messid.txt

    bindsym Esc mode "default"
    bindsym Return mode "default"
}

bindsym Mod4+m focus floating; mode "moveit"
mode "moveit" {
    bindsym Up move up 20px
    bindsym Left move left 20px
    bindsym Down move down 20px
    bindsym Right move right 20px
    bindsym Esc mode "default"
    bindsym Return mode "default"
}

